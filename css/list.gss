/**
 * Provides the default styling for the list and list items.
 */

.pstj-list {
  padding: 3px;
  width: 100%;
  height: 100%;
  overflow-y: scroll;
}

.pstj-list-container {
  width: 100%;
}

.pstj-list-item {
  width: 60px;
  height: 85px;
  padding: 2px;
  float: left;
}

.pstj-list-item-thumbnail {
  width: 50px;
  height: 50px;
}

